<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="streetart.CFO.orlandostreetart">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_1x"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_1x"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.SubmitPhoto"></activity>
        <activity android:name=".views.ForgotPassword" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCoGqYmvn_nXvsdgk_xiMhiV3L4nEguIF0" />

        <activity
            android:name=".views.FragmentViews.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.CreateAccount" />
        <activity android:name=".views.UpdatePassword" />
        <activity android:name=".views.Details" />
        <activity android:name=".views.GoogleMapView" />
        <activity android:name=".views.Login" />
        <activity android:name=".presenters.SubmitPhotoPresenter" />
    </application>

</manifest>