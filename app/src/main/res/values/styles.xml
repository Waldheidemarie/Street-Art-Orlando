<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Settings purple button style theme. -->
    <style name="SettingsPurpleButtons">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Setting black button style theme. -->
    <style name="SettingsBlackButtons">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <!-- Edit text style theme. -->
    <style name="EditText">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:background">@color/button_background</item>
    </style>
</resources>
